{
  "name": "ttt-backends",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "prettier": "prettier --write \"./**/*.*(ts|tsx|css)\"",
    "api:connection": "cd src/connection && yarn start",
    "api:move": "cd src/move && yarn start",
    "api": "run-p api:connection api:move "
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  }
}
