{
  "name": "ttt-backends",
  "private": true,
  "workspaces": [
    "src/*",
    "tempfunc/"
  ],
  "scripts": {
    "prettier": "prettier --write \"./**/*.*(ts|tsx|css)\"",
    "env": "sync-dotenv",
    "postinstall": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn env"
    }
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "sync-dotenv": "^2.6.2",
    "typescript": "^4.3.5"
  }
}
